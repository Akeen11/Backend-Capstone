@model BackendCapstone.Models.Message

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="card" style="width: 75em; border: solid; padding: 1em; margin-bottom: 1em;">
        <div class="card-body" style="flex-wrap: wrap;">
            <h3 class="card-title">@Model.SendingUser.FullName</h3>
            <p><strong>@Html.DisplayNameFor(model => model.ReceivingUser)</strong> @Model.ReceivingUser.FullName</p>
            <p style="display: flex; flex:auto; flex-wrap: wrap;"><strong>Message:</strong></p>
            <p>@Model.Messages</p>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MessageId" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
